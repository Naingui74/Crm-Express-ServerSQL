datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  companyId Int
  company   Company  @relation(fields: [companyId], references: [id])
}

model Company {
  id        Int      @id @default(autoincrement())
  name      String
  address   String
  users     User[]
}

